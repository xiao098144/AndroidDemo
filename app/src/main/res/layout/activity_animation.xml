<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.xiao.demo.animation.AnimationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/animation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="column"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <Button
                android:id="@+id/animation_btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始动画" />

            <Button
                android:id="@+id/animation_btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束动画" />

        </com.google.android.flexbox.FlexboxLayout>


        <ImageView
            android:id="@+id/animation_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation_layout"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:src="@mipmap/circle_red"
            />

        <ImageView
            android:id="@+id/animation_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation_layout"
            android:layout_centerHorizontal="true"
            android:alpha="0.3"
            android:src="@mipmap/circle_red"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation_layout"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/circle_red" />

    </RelativeLayout>
</ScrollView>