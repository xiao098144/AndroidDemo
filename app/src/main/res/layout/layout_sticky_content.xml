<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv0"
            android:layout_width="3dp"
            android:layout_height="8dp"
            android:background="#ff6633" />

        <TextView
            android:id="@+id/sticky_content_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/tv0"
            android:gravity="center"
            android:text="9:00"
            android:textColor="#999999"
            android:textSize="11sp" />

        <FrameLayout
            android:id="@+id/sticky_content_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sticky_content_tv_time"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/sticky_content_tv_time">

            <View
                android:layout_width="243dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#e5e5e5" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/sticky_content_img"
            android:layout_width="107dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/sticky_content_img_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="47dp"
            android:src="@mipmap/index_order_button" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/sticky_content_img_order"
            android:layout_toRightOf="@id/sticky_content_img"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sticky_content_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:text="李逍遥Title"
                android:textColor="#060606"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sticky_content_tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:text="李逍遥与灵儿的凄苦故事顺丰到付规范和钢结构发不发图还没地方分郭敬明回复您"
                android:textColor="#999"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sticky_content_img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/index_order_laber_icon" />

                <TextView
                    android:id="@+id/sticky_content_tv_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:textColor="#cdcdcd"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/sticky_content_tv_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:drawableLeft="@mipmap/index_people_icon"
                    android:drawablePadding="5dp"
                    android:text="234人预约"
                    android:textColor="#cdcdcd"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>